<% provide :title, t("activerecord.login") %>
<h1><%= t("activerecord.login") %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t("activerecord.attributes.session.password") %>
      <%= f.password_field :password, class: "form-control"  %>
      <%= f.submit t("activerecord.login"), class: "btn btn-primary" %>
    <% end %>
    <p>
      <%= t "activerecord.new_user?" %>
      <%= link_to t("activerecord.sign_up_now"), signup_path %>
    </p>
  </div>
</div>
