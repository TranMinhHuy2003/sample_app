<% provide :title, t("activerecord.login") %>
<h1><%= t "activerecord.login" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label t("activerecord.attributes.session.password") %>
      <%= link_to t("activerecord.forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control"  %>
      <%= f.label t("activerecord.attributes.session.remember_me"), class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t("activerecord.attributes.session.remember") %></span>
      <% end %>
      <%= f.submit t("activerecord.login"), class: "btn btn-primary" %>
    <% end %>
    <p>
      <%= t "activerecord.new_user?" %>
      <%= link_to t("activerecord.sign_up_now"), signup_path %>
    </p>
  </div>
</div>
