<% provide :title,  t("static_pages.home.heading") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "micropost.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <h1><%= t "sample_app" %></h1>
  <p><%= t "static_pages.home.intro_html", source: Settings.rails_tutorial %></p>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.heading" %></h1>
    <h2><%= t "static_pages.home.intro_html", source: Settings.rails_tutorial %></h2>
    <%= link_to t("activerecord.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
