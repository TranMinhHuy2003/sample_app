<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("sample_app"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("static_pages.home.heading"), root_path %></li>
        <li><%= link_to t("static_pages.help.heading"), help_path %></li>
        <% if logged_in? %>
          <li><%= link_to t("static_pages.users"), users_path %></li>
          <li class="dropdown">
            <%= link_to "#", id: "account", class: "dropdown-toggle", data: { toggle: "dropdown" } do %>
              <%= t("static_pages.account") %><b class="caret"></b>
            <% end %>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to t("static_pages.profile"), current_user %></li>
              <li><%= link_to t("static_pages.settings"), edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("static_pages.log_out"), logout_path, data: { "turbo-method": :delete }  %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("activerecord.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
